
<div class="user-profile layout-three-column">
  <div class="column-left">
    {{ user_view }}
		<div class="user-profile">
		  <div class="profile-header">
			<h2>{{ user.getDisplayName() }}</h2>
			{% if user.user_picture.entity %}
			  <div class="profile-picture">
				{{ file_url(user.user_picture.entity.uri.value) }}
			  </div>
			{% else %}
			  <div class="profile-picture">
				<img class="rounded-circle"src="../../profiles/user1.png" alt="Default Avatar">
			  </div>
			{% endif %}
		  </div>
		  <div class="profile-body">
			<p><strong>Email:</strong> {{ user.getEmail() }}</p>
			<p><strong>Member since:</strong> </p>
		  </div>
		</div>
  </div>
  <div class="column-center">

    
    <!-- Bootstrap 5 Tabs -->
    <ul class="nav nav-tabs justify-content-center" id="profileTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="overview-tab" data-bs-toggle="tab" data-bs-target="#overview" type="button" role="tab" aria-controls="overview" aria-selected="true">Brick Gallery</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="activity-tab" data-bs-toggle="tab" data-bs-target="#activity" type="button" role="tab" aria-controls="activity" aria-selected="false">Grid Mason</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="settings-tab" data-bs-toggle="tab" data-bs-target="#settings" type="button" role="tab" aria-controls="settings" aria-selected="false">Crystal Mason</button>
      </li>
       <li class="nav-item" role="presentation">
        <button class="nav-link" id="settings-tab" data-bs-toggle="tab" data-bs-target="#flex" type="button" role="tab" aria-controls="flex" aria-selected="false">Flexbox Mason</button>
      </li>
    </ul>

    <div class="tab-content" id="profileTabContent">
      <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview-tab">
        <h5> Masonry Bricks Gallery </h5> 
        {% include "@user_profile_account/galleries-static-gallery.html.twig" %}
      </div>
      <div class="tab-pane fade" id="activity" role="tabpanel" aria-labelledby="activity-tab">
        <h5>Grid Mason Gallery</h5>
        {% include "@user_profile_account/galleries-mason.html.twig" %}

      </div>
      <div class="tab-pane fade" id="settings" role="tabpanel" aria-labelledby="settings-tab">
        <h5>Magic Mason Gallery</h5>
        {% include "@user_profile_account/galleries-magic-mason.html.twig" %}
      </div>
      <div class="tab-pane fade" id="flex" role="tabpanel" aria-labelledby="settings-tab">
        <h5>Flexbox Mason Gallery</h5>
        {% include "@user_profile_account/galleries-flexbox-mason.html.twig" %}
      </div>
    </div>
    
  </div>
</div>