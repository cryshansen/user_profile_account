      <h2>All Sales History</h2>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">industrytype</th>
              <th scope="col">purchasedate</th>
              <th scope="col">month</th>
              <th scope="col"> city</th>
              <th scope="col">region</th>
              <th scope="col">country</th>
              <th scope="col">price_USD</th>
              <th scope="col">payment_method</th>
              <th scope="col">customer_segment</th>
              <th scope="col">referral_source</th>
            </tr>
          </thead>
          <tbody>
           {% for row in salestbl %}
            <tr>
              <td>{{ row.id }}</td>
              <td>{{ row.industrytype }}</td>
              <td>{{ row.purchasedate|date('Y-m-d') }}</td>
              <td>{{ row.purchasedate|date('F') }}</td> {# extracts month from date #}
              <td>{{ row.city }}</td>
              <td>{{ row.region }}</td>
              <td>{{ row.country }}</td>
              <td>${{ row.price_USD }}</td>
              <td>{{ row.customer_segment }}</td>
              <td>{{ row.payment_method }}</td>
              <td>{{ row.referral_source }}</td>
            </tr>
            {% else %}
              <tr>
                <td colspan="11">No data found.</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
        {{ pager }}
      </div>







