                'type' => 'varchar',
                'length' => 1000,
                'not null' => TRUE,
                'default' => '',
            ),
            'product_category' => array(
                'description' => 'Product Category -  Modules',
                'type' => 'varchar',
                'length' => 255,
                'not null' => TRUE,
                'default' => '',
            ),
            'product_license' => array(
                'description' => 'Product License',
                'type' => 'varchar',
                'length' => 255,
                'not null' => TRUE,
                'default' => '',
            ),
            'product_price' => array(
                'description' => 'Product price',
                'type' => 'double',
                'length' => 255,
                'not null' => TRUE,
                'default' => '',
            ),
            'product_code' => array(
                'description' => 'Product code',
                'type' => 'varchar',
                'length' => 255,
                'not null' => TRUE,
                'default' => 'New-Product-Version',
            ),
        ),
        'primary key' => array('id'),
    );
    /**  */
    $schema['user_profile_account_payment'] = array(
        'description' => 'The table for storing the payment information',
        'fields' => array(
            'id' => array(
                'description' => 'Primary identifier for Product.',
                'type' => 'serial',
                'not null' => TRUE,
                'unsigned' => TRUE,
            ),
            'item_number' => array(
                'description' => 'Item Numbber',
                'type' => 'varchar',
                'length' => 255,
                'not null' => TRUE,
                'default' => '',
            ),
            'item_name' => array(
                'description' => 'Item Name',
                'type' => 'varchar',
                'length' => 1000,
                'not null' => TRUE,
                'default' => '',
            ),
            'payment_status' => array(
                'description' => 'Product Description',
                'type' => 'varchar',
                'length' => 1000,
                'not null' => TRUE,
                'default' => '',
                ),
            'payment_amount'  => array(
                'description' => 'Product Description',
                'type' => 'double(10,2) ',
                'length' => 1000,
                'not null' => TRUE,
                'default' => '',
            ),
            'payment_currency'  => array(
                'description' => 'Product Description',
                'type' => 'varchar(255)',
                'length' => 1000,
                'not null' => TRUE,
                'default' => '',
            ),
            'txn_id'  => array(
                'description' => 'Product Description',
                'type' => 'varchar(255) ',
                'length' => 1000,
                'not null' => TRUE,
                'default' => '',
            ),
             'create_at' => array(
                'description' => 'Product Description',
                'type' => ' timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP',
                'length' => 1000,
                'not null' => TRUE,
                'default' => '',
            ),
        ),
        'primary key' => array('id'),
    );


    return $schema;
}
